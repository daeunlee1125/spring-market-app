<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.shoply.mapper.Cate2Mapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="cno" keyColumn="CNO">
        INSERT INTO TB_COMMENT
            (ANO, CONTENT, WRITER, REG_IP, WDATE)
        VALUES
            (#{ano},#{content},#{writer},#{reg_ip}, SYSDATE)
    </insert>

    <select id="select" resultType="kr.co.shoply.dto.Cate2DTO">
        SELECT c1.CATE1_NAME , c2.*
        FROM CATE1 c1
        JOIN CATE2 c2
        ON	c1.CATE1_NO = c2.CATE1_NO
        WHERE c2.CATE2_NO = #{cate2_no}
    </select>

    <select id="selectAll" resultType="kr.co.shoply.dto.Cate2DTO">
        SELECT *
        FROM PRODUCT
        WHERE CATE2_NO = #{cate2_no}
    </select>

    <select id="selectAll3" resultType="kr.co.shoply.dto.Cate2DTO">
        SELECT *
        FROM CATE2
        WHERE CATE1_NO = #{cate1_no}
    </select>

    <update id="update">
        update TB_COMMENT set content=#{content} where cno=#{cno}
    </update>

    <delete id="delete">
        delete from TB_COMMENT where cno=#{cno}
    </delete>

</mapper>