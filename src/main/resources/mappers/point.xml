<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.shoply.mapper.PointMapper">

    <select id="selectPoint3" resultType="int">
        SELECT NVL(SUM(P_POINT), 0)
        FROM POINT
        WHERE MEM_ID = #{mem_id}
    </select>


</mapper>