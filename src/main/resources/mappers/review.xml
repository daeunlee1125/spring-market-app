<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.shoply.mapper.ReviewMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="cno" keyColumn="CNO">
    </insert>

    <select id="select" parameterType="string" resultType="double">
        SELECT NVL(ROUND(AVG(REV_RATING),1),0)
        FROM REVIEW
        WHERE PROD_NO = #{prod_no}
    </select>

    <select id="selectAll3" resultType="kr.co.shoply.dto.ReviewDTO">
        SELECT *
        FROM REVIEW
        WHERE PROD_NO = #{prod_no}
    </select>

    <select id="selectPageList3" resultType="kr.co.shoply.dto.ReviewDTO">
        SELECT *
        FROM REVIEW
        WHERE PROD_NO = #{prod_no}
        ORDER BY REV_NO DESC
        OFFSET #{offset} ROWS
        FETCH NEXT 5 ROWS ONLY
    </select>

    <select id="selectCountAll3" resultType="int">
        SELECT COUNT(*)
        FROM REVIEW
        WHERE PROD_NO = #{prod_no}
    </select>

    <update id="update">
    </update>

    <delete id="delete">
    </delete>

</mapper>